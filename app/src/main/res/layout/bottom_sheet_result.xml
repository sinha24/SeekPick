<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="9sp"
    app:behavior_hideable="true"
    app:behavior_peekHeight="60sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16sp"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:id="@+id/bsName"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:text="Name"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/bsPrice"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Price"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16sp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bsShopName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9sp"
            android:text="Shop Name"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/bsAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4sp"
            android:text="Address"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/bsNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:attr/buttonBarButtonStyle"
        android:gravity="center">

        <Button
            android:id="@+id/bsCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40sp"
            style="?android:attr/buttonBarButtonStyle"
            android:text="Call" />

        <Button
            android:id="@+id/bsPing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/buttonBarButtonStyle"
            android:text="Ping" />
    </LinearLayout>
</LinearLayout>